[shard1]
type=server
address=10.0.2.15
port=3306


[shard2]
type=server
address=10.0.2.15
port=3306


[sharded-Service]
type=service
router=schemarouter
servers=shard1,shard2
user=root
password=maxpwd

[sharded-Listener]
type=listener
service=sharded-Service
protocol=MariaDBClient
port=4006

[MySQLMonitor]
type=monitor
module=mariadbmon
servers=shard1,shard2
user=root
password=maxpwd
monitor_interval=10000

