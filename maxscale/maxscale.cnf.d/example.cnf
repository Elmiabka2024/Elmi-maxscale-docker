# example.cnf - MaxScale Sharding Configuration

[server1]
type=server
address=127.0.0.1
port=3307
protocol=MariaDBBackend
authenticator=basic
user=maxuser
password=maxpwd

[server2]
type=server
address=127.0.0.1
port=3308
protocol=MariaDBBackend
authenticator=basic
user=maxuser
password=maxpwd

[Monitor1]
type=monitor
module=mariadbmon
servers=server1,server2
user=maxuser
password=maxpwd
monitor_interval=10000

[Sharding-Service]
type=service
router=sharding
servers=server1,server2
user=maxuser
password=maxpwd

[Sharding-Listener]
type=listener
service=Sharding-Service
protocol=MariaDBClient
address=0.0.0.0
port=4006

