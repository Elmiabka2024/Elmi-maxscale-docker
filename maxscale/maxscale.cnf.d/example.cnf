[maxscale]
threads=8

[shard1]
type=server
address=shard1
port=3306
protocol=MariaDBBackend

[shard2]
type=server
address=shard2
port=3306
protocol=MariaDBBackend

[sharded-service]
type=service
router=schemarouter
servers=shard1,shard2
user=maxuser
password=maxpwd

[sharded-listener]
type=listener
service=sharded-service
protocol=MariaDBClient
port=4006

[MySQL-monitor]
type=monitor
module=mariadbmon
servers=shard1,shard2
user=maxuser
password=maxpwd
monitor_interval=10000

