[maxscale]
threads=8

[shard1]
type=server
address=shard1
port=3306

[shard2]
type=server
address=shard2
port=3306

[sharded-Service]
type=service
router=schemarouter
servers=shard1,shard2
user=maxuser
password=maxpwd

[sharded-Listener]
type=listener
service=sharded-Service
protocol=MariaDBClient
port=4006

[MySQLMonitor]
type=monitor
module=mariadbmon
servers=shard1,shard2
user=maxuser
password=maxpwd
monitor_interval=10000

[maxctrl-service]
type=service
router=cli
listener=admin_listener

[admin_listener]
type=listener
service=maxctrl-service
protocol=maxscaled
address=0.0.0.0
port=6603

